# Production Environment Configuration
# Copy this file to .env.prod and fill in with actual values
# IMPORTANT: Never commit .env.prod to version control!

# Application
VERSION=1.0.0
ENV=production

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=k8s_optimizer
POSTGRES_USER=optimizer
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DATA_PATH=./data/postgres

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
REDIS_DATA_PATH=./data/redis

# MinIO (S3-compatible object storage)
MINIO_ROOT_USER=CHANGE_ME_MINIO_USER
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_DATA_PATH=./data/minio
MINIO_BUCKET=cost-reports

# API Service
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_LOG_LEVEL=info
API_URL=https://cost-optimizer.example.com

# Dashboard
DASHBOARD_PORT=3000
WS_URL=wss://cost-optimizer.example.com

# Monitoring
PROMETHEUS_PORT=9090
PROMETHEUS_DATA_PATH=./data/prometheus

GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
GRAFANA_ROOT_URL=https://grafana.cost-optimizer.example.com
GRAFANA_DATA_PATH=./data/grafana

# ML Engine
ML_MODEL_PATH=/app/models
ML_CONFIDENCE_THRESHOLD=0.8
ML_LOOKBACK_DAYS=30

# Cloud Provider Credentials (optional)
# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# GCP
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/gcp-key.json
GCP_PROJECT_ID=

# Azure
AZURE_SUBSCRIPTION_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# Security
SESSION_SECRET=CHANGE_ME_RANDOM_SECRET_HERE
JWT_SECRET=CHANGE_ME_RANDOM_SECRET_HERE
CORS_ORIGINS=https://cost-optimizer.example.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=cost-optimizer-backups
BACKUP_S3_REGION=us-east-1

# Alerting
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_FROM=alerts@cost-optimizer.example.com
ALERT_EMAIL_TO=ops@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

SLACK_WEBHOOK_URL=
PAGERDUTY_API_KEY=

# Feature Flags
FEATURE_AUTO_APPLY=false
FEATURE_ML_RECOMMENDATIONS=true
FEATURE_MULTI_CLOUD=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
